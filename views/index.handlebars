<h1>Eat-Da-Burger!</h1>

<img src="<EAT-DA-BURGER>./public/assets/img/burger.png">

<div class= "burgers">
  <h2>BURGERS FOR YOU TO DEVOUR</h2>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger devoured=false}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class= "devoured">
<h2>DEVOURED BURGERS</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger devoured=true}}
  {{/if}}
  {{/each}}
</ul>
</div>


<div class="adder">
<h2>ORDER A BURGER</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>